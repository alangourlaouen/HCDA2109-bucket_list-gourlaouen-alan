{% extends 'base.html.twig' %}


{% block body %}
<div class="container">
    <div class="wish-list">
    {% for wish in wishList %}
    {% if wish.isPublished %}
    <a href="{{path('app_wish_detail', {id: wish.id})}}">
        <div class="card">   

        <div class="card-header">
         <h3>{{wish.title}}</h3>
        </div>

        <div class="card-body">
        <div class="card-info card-info-center">
                <span>{{wish.category.name}}</span>
            </div>
        </div>
        </div>
    </a>

    {% endif %}
    {% endfor %}
</div>

</div>

{% endblock %}
