{% extends 'base.html.twig' %}

{% block title %} {{wish.title}} {% endblock %}

{% block body %}
    <div class="container">
        <div class="center">
            <div class="card">
            <div class="card-header">   
                <h3>{{wish.title}}</h3>
            </div>
            <div class="card-body">
                <p>{{wish.description}}</p>
                

                <div class="card-info">
                    <div class="card-author">
                    <span>{{wish.author}}</span>
                    </div>
                    <div class="card-date">
                        <time>{{wish.dateCreated|date('d/m/Y H:i:s')}}</time>
                    </div>
                </div>
                
            </div>
                
            </div>
        </div>
        
    </div>
 {% endblock %}